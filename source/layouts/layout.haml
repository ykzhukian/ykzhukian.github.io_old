%html
  %head
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no", :name => "viewport"}/
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title
    %link{:href => "//fonts.googleapis.com/css?family=Lato:300,400", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag :site
    = favicon_tag 'favicon.ico'
  %body.flex.min-h100vh.flex-column.justify-center
    .container.flex.justify-around.max-w1200px.flex-column
      #sider-container.sider-container.md-px4.sm-px0.sm-order1.sm-pt0.pt18{class: ('hide' if current_page.data.page == "thanks")}
        = partial 'partials/sider', :page => current_page.data.page
      .flex.flex-column.flex-grow.px10.md-px4.sm-p0.sm-pb4
        = yield
        = partial 'partials/footer'

  = javascript_include_tag :all
